{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "src/generated/prisma"],
  "exclude": ["node_modules", "dist"]
}
